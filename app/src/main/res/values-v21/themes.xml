<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Calculator" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/calculator_logo1_background</item>
        <item name="colorSecondaryVariant">@color/calculator_logo1_background</item>
        <item name="colorOnSecondary">#F0EEEE</item>
    </style>

    <style name="Theme.Calculator.NoActionBar">
        <item name="colorPrimary">#F4EFEF</item>
        <item name="colorPrimaryVariant">@color/calculator_logo1_background</item>
        <item name="colorOnPrimary">#ECE8E8</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorSecondary">#F3EDED</item>
        <item name="colorSecondaryVariant">#E6E1E1</item>
        <item name="colorOnSecondary">#E6E3E3</item>
        <item name="actionMenuTextColor">#E6E3E3</item>
        <item name="android:actionMenuTextColor">#E6E3E3</item>
        <item name="titleTextColor">#E6E3E3</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

</resources>